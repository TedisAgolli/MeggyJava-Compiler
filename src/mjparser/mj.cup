		LinkedList<VarDecl> _varDecls = new LinkedList<VarDecl>();
		LinkedList<MethodDecl> _methodDecls = new LinkedList<MethodDecl>();
		//_methodDecls.add(methods);
		RESULT=new TopClassDecl(0,0,"",_varDecls,_methodDecls);
		:}
